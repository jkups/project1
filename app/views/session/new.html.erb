<div class="wrapper">
  <% if flash[:error] %>
    <div class="notice">
      <div class="container">
        <i class="fas fa-ban"></i> <%= flash[:error] %>
      </div>
    </div>
  <% end %>
  <div class="container">
    <div class="flex-box">
      <div class="login">
        <div class="logo">
          <i class="fas fa-blog"></i>
        </div>
        <%= form_with url:login_path, local:true do |f| %>
          <%= f.email_field :email, placeholder: 'Email Address' %>
          <%= f.password_field :password, placeholder: 'Password'%>
          <%= link_to 'Forgot your password?', new_user_path, class: 'forgot' %>
          <%= f.button 'Log In' %>
          <%= link_to 'You have not created a profile? Sign up.', new_user_path, class: 'signup' %>

        <% end %>
      </div>
      <div class="mt-3 text-black-50">
        see test credentials
        <a href="https://github.com/jkups/mulka" target="_blank">here</a>
      </div>
    </div>
  </div>
</div>
