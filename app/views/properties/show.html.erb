<div class="container">
	<div class="carousel slide" data-ride="carousel" data-interval="false" data-pause="false" id="carousel">
		<div class="carousel-inner" role="listbox">
			<div class="carousel-item active">
        <%= image_tag @property.prop_image + '-lg', class:"w-100 d-block" %>
				<!-- <img class="w-100 d-block" src="/images/prop-img-1-lg.jpg" alt="Slide Image"> -->
			</div>
		</div>
		<div>
			<a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev"><span class="carousel-control-prev-icon"></span><span class="sr-only">Previous</span></a><a class="carousel-control-next" href="#carousel" role="button" data-slide="next"><span class="carousel-control-next-icon"></span><span class="sr-only">Next</span></a>
		</div>
		<ol class="carousel-indicators">
			<li data-target="#carousel" data-slide-to="0" class="active"></li>
			<li data-target="#carousel" data-slide-to="1"></li>
			<li data-target="#carousel" data-slide-to="2"></li>
		</ol>
	</div>
	<div class="border-bottom py-5">
		<ul class="list-unstyled d-md-flex" style="margin-bottom: 0;">
			<li class="flex-fill">
				<div>
					<div>
						<h3 class="text-info mb-4">$ <%= @property.value / @property.total_shares %>/share</h3>
						<h4 class="mb-0"><%= @property.name %></h4>

					</div>
					<p>
						<%= @property.address %>
					</p>
					<ul class="list-unstyled d-flex align-items-lg-start text-black-50 font-weight-bold">
						<li class="mr-3"><%= @property.bed %> <i class="fas fa-bed"></i></li>
						<li class="mr-3"><%= @property.bath %> <i class="fas fa-bath"></i></li>
						<li class="mr-3"><%= @property.car_park %> <i class="fas fa-car"></i></li>
						<li class="mr-3"><%= @property.plot_size %> sqft</li>
					</ul>
					<div class="my-5">
						<%= link_to 'Buy Shares', new_checkout_path, class:"btn btn-info btn-lg px-5 button-block" %>
						<!-- <a class="btn btn-info btn-lg px-5 button-block" href="/property/5f6734d1e7179a6ea51fa4f2/checkout">
							Buy Shares</a> -->
					</div>
				</div>
			</li>
			<li class="flex-fill">
				<div class="bg-light shadow-sm p-4 rounded">
					<h4 class="text-secondary">Key Facts</h4>
					<ul class="list-unstyled d-flex property-fact">
						<li class="flex-fill">Investment Status:</li>
						<li class="text-info font-weight-bold"><%= @property.status.upcase %></li>
					</ul>
					<ul class="list-unstyled d-flex property-fact">
						<li class="flex-fill">Property Type:</li>
						<li class="text-info font-weight-bold"><%= @property.prop_type %></li>
					</ul>
					<ul class="list-unstyled d-flex property-fact">
						<li class="flex-fill">Minimum Investment:</li>
						<li class="text-info font-weight-bold"><%= @property.min_shares %> unit share</li>
					</ul>
					<ul class="list-unstyled d-flex property-fact">
						<li class="flex-fill">Units Available:</li>
						<li class="text-info font-weight-bold"><%= @property.available_shares %></li>
					</ul>
					<ul class="list-unstyled d-flex property-fact">
						<li class="flex-fill">Estimated Yield (5yrs):</li>
						<li class="text-info font-weight-bold">10%</li>
					</ul>
					<ul class="list-unstyled d-flex property-fact">
						<li class="flex-fill">Property Value:</li>
						<li class="text-info font-weight-bold">$ <%= @property.value %></li>
					</ul>
				</div>
				<div>
					<p class="property-fact-disclaimer font-italic">
						*Property Valuation as at June, 2020. Projected yield is an estimate.
					</p>
				</div>
			</li>
		</ul>
	</div>
</div>

<div class="container">
	<div class="py-5 border-bottom">
		<h4>Property Description</h4>
		<div class="property-info">
			<h6>
				<strong>Premium Property</strong><br>
			</h6>
			<div>
				<p>Here is the description</p>
			</div>
		</div>
		<div class="property-info">
			<h6><strong>Property Features:</strong><br></h6>
			<div>
				<ul class="list-unstyled d-flex align-items-lg-start text-black-50 font-weight-bold">
					<li class="mr-3">3 <i class="fas fa-bed"></i></li>
					<li class="mr-3">2 <i class="fas fa-bath"></i></li>
					<li class="mr-3">2 <i class="fas fa-car"></i></li>
					<li class="mr-3">1,600 sqft</li>
				</ul>
			</div>
		</div>
		<div class="property-info">
			<h6><strong>Property Location:</strong><br></h6>
			<div>
				<p>
					<%= @property.address %>
				<br>
				</p>
				<iframe class="border rounded shadow-sm" allowfullscreen="" frameborder="0" src="https://www.google.com/maps/embed/v1/place?
						key=AIzaSyCdUMO5lFn8XLThP8fHi1b_2mIxEdJsv0c&amp;
						q=<%= @property.address %>&amp;zoom=11" width="100%" height="400"></iframe>
			</div>
		</div>
	</div>
</div>
