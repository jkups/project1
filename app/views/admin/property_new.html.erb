<% if flash[:error] %>
	<div class="notice">
		<div class="container">
			<i class="fas fa-ban"></i> <%= flash[:error] %>
		</div>
	</div>
<% end %>

<%= form_with model: @property, local: true do |f| %>

	<div class="container py-5">
		<h4 class="text-info flex-fill mt-md-4 mb-5">New Property<br></h4>
		<div class="border rounded p-4">
			<div>
				<h5>Account Details</h5>
				<hr class="mb-4 border-info">
				<div class="form-row">
					<div class="form-group col-md-6">
            <%= f.label :account_type, 'Account Type:', class:"d-block text-black-50" %>
            <%= f.select :account_type, [['Individual Account', 'Individual Account'], ['Corporate Account', 'Corporate Account']], {}, {id:"toggleCompany", class:"custom-select custom-select-lg form-control"} %>
					</div>
					<div class="form-group col-md-6">
            <%= f.label :account_name, 'Account Name:', class:"d-block text-black-50" %>
            <%= f.text_field :account_name, class:"form-control-lg form-control" %>
					</div>
				</div>
			</div>

			<%= f.fields_for :user do |f| %>
				<div class="mt-4">
					<h5>Contact Details</h5>
					<hr class="mb-4 border-info">
					<div class="form-row">
						<div class="form-group col-md-4">
	            <%= f.label :first_name, 'First Name:', class:"d-block text-black-50" %>
	            <%= f.text_field :first_name, class:"form-control-lg form-control", readonly:'true' %>
						</div>
						<div class="form-group col-md-4">
							<%= f.label :middle_name, 'Middle Name:', class:"d-block text-black-50" %>
	            <%= f.text_field :middle_name, class:"form-control-lg form-control", readonly:'true' %>
						</div>
						<div class="form-group col-md-4">
							<%= f.label :last_name, 'Last Name:', class:"d-block text-black-50" %>
	            <%= f.text_field :last_name, class:"form-control-lg form-control", readonly:'true' %>
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<%= f.label :email, 'Email Address:', class:"d-block text-black-50" %>
	            <%= f.text_field :email, class:"form-control-lg form-control", readonly:'true' %>
						</div>
						<div class="form-group col-md-6">
							<%= f.label :mobile_number, 'Mobile Number:', class:"d-block text-black-50" %>
	            <%= f.text_field :mobile_number, class:"form-control-lg form-control", readonly:'true' %>
						</div>
					</div>
				</div>
			<% end %>

			<div id="corporateIdentity" class="mt-4" style="display:none;">
				<h5>Company Details</h5>
				<hr class="mb-4 border-info">
				<div class="form-row">
					<div class="form-group col-md-6">
						<%= f.label :company_name, 'Company Name:', class:"d-block text-black-50" %>
						<%= f.text_field :company_name, class:"form-control-lg form-control" %>
					</div>
					<div class="form-group col-md-6">
						<%= f.label :reg_number, 'Registration Number:', class:"d-block text-black-50" %>
						<%= f.text_field :reg_number, class:"form-control-lg form-control" %>
					</div>
				</div>
			</div>

			<div class="text-right my-4">
				<%= f.button 'CREATE ACCOUNT',class:'btn btn-info ml-md-2 button-block submit' %>
			</div>
		</div>
	</div>
<% end %>>
